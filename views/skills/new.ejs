<%- include('../partials/header') %>

<form action="/skills" method="POST" autocomplete="off">
  <input type="text" name="skill" />

  <div class="mb-3">
    <label for="skill" class="form-label">Add a new Skill</label>
    <input
      type="text"
      class="form-control"
      id="skill"
      aria-describedby="skillHelp"
      name="description"
    />
    <div id="skillHelp" class="form-text">Please describe the skill.</div>
    <input
    type="text"
    class="form-control"
    id="skill"
    aria-describedby="skillHelp"
    name="level"
  />
    <div id="skillHelp" class="form-text">Please add level of skill.</div>
  </div>
  <button type="submit" class="btn btn-primary">Add Skill</button>
</form>

